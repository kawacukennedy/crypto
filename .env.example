# Private key for deployment (DO NOT commit the actual .env file)
PRIVATE_KEY=your_private_key_here

# Infura API Key for network connections
INFURA_API_KEY=your_infura_api_key_here

# Network URLs
SEPOLIA_URL=https://sepolia.infura.io/v3/${INFURA_API_KEY}
GOERLI_URL=https://goerli.infura.io/v3/${INFURA_API_KEY}
MAINNET_URL=https://mainnet.infura.io/v3/${INFURA_API_KEY}

# Etherscan API Key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Gas reporting (set to true to enable)
REPORT_GAS=false

# Coinmarketcap API Key (for gas reporting in USD)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Development settings
NODE_ENV=development

# Optional: Alchemy URLs (alternative to Infura)
# SEPOLIA_URL=https://eth-sepolia.g.alchemy.com/v2/your_alchemy_key
# GOERLI_URL=https://eth-goerli.g.alchemy.com/v2/your_alchemy_key
# MAINNET_URL=https://eth-mainnet.g.alchemy.com/v2/your_alchemy_key
